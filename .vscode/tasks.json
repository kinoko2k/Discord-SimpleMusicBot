{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "shell",
      "group": "build",
      "command": [
        "node builder.mjs bake && npx tsc --incremental -p tsconfig.bundle.json && node builder.mjs bundle --leave-build-artifact"
      ],
      "label": "Transpile TypeScript"
    },
    {
      "type": "shell",
      "group": "none",
      "label": "Install dependencies",
      "command": [
        "npm install"
      ],
      "problemMatcher": []
    },
    {
      "type": "npm",
      "group": "none",
      "label": "Clean up compiled files",
      "script": "cleanup",
      "problemMatcher": []
    }
  ]
}
